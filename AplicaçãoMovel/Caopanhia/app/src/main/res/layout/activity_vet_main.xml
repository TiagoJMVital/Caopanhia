<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VetMainActivity"
    android:orientation="vertical"
    android:layout_margin="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_bem_vindo"
        android:textSize="30dp"
        android:textColor="@color/soft_brown"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUsernameVet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_username"
        android:textSize="30dp"
        android:textColor="@color/soft_brown"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_futuras_consultas"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/soft_brown"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvConsultas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/txt_sair"
        android:backgroundTint="@color/soft_brown"
        android:onClick="onClickLogout"/>

</LinearLayout>
